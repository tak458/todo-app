{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@repo/typescript-config/nextjs.json"],
  "compilerOptions": {
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.cjs", "**/*.mjs", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "next.config.js"]
}
