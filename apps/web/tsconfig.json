{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/next/tsconfig.json"],
  "compilerOptions": {
    /* Base Options: */
    "target": "ES2017",

    "types": ["vitest/globals"],
    "jsxImportSource": "@emotion/react",

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "src", "test"],
  "exclude": ["node_modules", "next.config.js"]
}
